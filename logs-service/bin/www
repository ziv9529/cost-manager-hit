#!/usr/bin/env node

/*
 * Logs Service - Server Entry Point
 * This module initializes the HTTP server and connects to the database
 */

// Module dependencies
const { app, connectDB } = require("../app");
const debug = require("debug")("logs-service:server");
const http = require("http");

/*
 * Helper Function: normalizePort
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  const port = parseInt(val, 10);
  if (isNaN(port)) {
    // Named pipe
    return val;
  }

  if (port >= 0) {
    // Port number
    return port;
  }

  return false;
}

// Connect to MongoDB first to ensure data access before accepting traffic
connectDB()
  .then(() => {
    // Get port from environment and store in Express
    const port = normalizePort(process.env.LOGS_PORT || "3002");
    app.set("port", port);

    // Create HTTP server
    const server = http.createServer(app);

    // Event listener for HTTP server "error" event
    const onError = (error) => {
      if (error.syscall !== "listen") {
        throw error;
      }

      const bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

      // Handle specific listen errors with friendly messages
      switch (error.code) {
        case "EACCES":
          // Permission Denied
          console.error(bind + " requires elevated privileges");
          process.exit(1);
          break;
        case "EADDRINUSE":
          // Address already in use - port is taken
          console.error(bind + " is already in use");
          process.exit(1);
          break;
        default:
          // Throw any other unexpected errors
          throw error;
      }
    };

    /*
     * Event listener for HTTP server "listening" event.
     */
    const onListening = () => {
      const addr = server.address();
      const bind =
        typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
      console.log(`http://localhost:${addr.port}/ up and running`);
      debug("Listening on " + bind);
    };

    // Start listening on the provided port
    server.listen(port);
    // Register the event listeners defined above
    server.on("error", onError);
    server.on("listening", onListening);
  })
  .catch((err) => {
    // Log any database connection errors and exit immediately
    console.error("Failed to connect to MongoDB:", err);
    process.exit(1);
  });
